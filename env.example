# Configuración común
NODE_ENV=development
PUBLIC_URL=https://esdetienda.com
API_URL=https://api.esdetienda.com

# OpenRouter (IA texto + visión)
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://esdetienda.com
OPENROUTER_APP_NAME=EsDeTienda-Bot

# Claves por modelo
OPENROUTER_API_KEY_TEXT=sk-or-text-model
OPENROUTER_API_KEY_VISION=sk-or-vision-model

# Presupuestos IA / Alertas
IA_NANO_BUDGET_USD=25
IA_VISION_BUDGET_USD=10
STT_MINUTES_CAP=300
ALERT_EMAIL=tu@correo.com

# STT (Proveedor principal)
STT_PROVIDER=google
GOOGLE_PROJECT_ID=...
GOOGLE_SA_EMAIL=...
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
...
-----END PRIVATE KEY-----"

# STT alternativo (AssemblyAI)
ASSEMBLYAI_API_KEY=...

# Supabase
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_ANON_KEY=sb_anon_key
SUPABASE_SERVICE_KEY=sb_service_role_key
SUPABASE_DB_URL=postgres://user:password@db.supabase.co:5432/postgres

# Observabilidad
POSTHOG_API_KEY=phc_xxx
POSTHOG_HOST=https://us.i.posthog.com
SENTRY_DSN=https://xxxxxx.ingest.sentry.io/xxxx

# Autenticación / seguridad
JWT_SECRET=change_me_super_secret
REFRESH_SECRET=change_me_refresh_secret

# Cloudflare (servicios extra)
CF_TURNSTILE_SITE_KEY=...
CF_TURNSTILE_SECRET=...
CF_ACCOUNT_ID=...

# Cloudflare R2 (media)
R2_BUCKET=media
R2_PUBLIC_BASE=https://media.esdetienda.com

# Servicios opcionales
EMAIL_PROVIDER=ses
SENDGRID_API_KEY=...
RESEND_API_KEY=...
QUEUE_BINDING=esdetienda-queue
REDIS_URL=...

# Frontend (variables Vite)
VITE_API_URL=https://api.esdetienda.com
VITE_POSTHOG_API_KEY=phc_xxx
VITE_POSTHOG_HOST=https://us.i.posthog.com
VITE_SENTRY_DSN=https://xxxxxx.ingest.sentry.io/xxxx


