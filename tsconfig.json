{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["packages/core/src/*"],
      "@/prompts/*": ["packages/prompts/src/*"],  
      "@/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["apps/**/*", "packages/**/*"],
  "references": [
    { "path": "./apps/frontend" },
    { "path": "./apps/worker-api" },
    { "path": "./packages/core" },
    { "path": "./packages/prompts" },
    { "path": "./packages/ui" }
  ]
}
